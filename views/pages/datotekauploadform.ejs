<%- include('../template/head')-%>
<body class="text-center">
    <div class="cover-container w-100 h-100 p-3 mx-auto flex-column">
        <%- include('../template/nav')-%>
        <main role="main" class="inner cover">
            <%- include('../template/messages')-%>
            <h1 class="cover-heading">Uredi verziju aplikacije</h1>
            <i class="fas fa-circle"></i> <%=data[0].du_nazivdatoteka %>  &nbsp;&nbsp;
            <i class="fas fa-circle"> </i> <%=(data[0].du_velicinedatoteke/1024/(1024)).toFixed(2) %> MB &nbsp;&nbsp;
            <i class="fas fa-circle"> </i><%=data[0].du_datumizmjene_prikaz %> 
            <div class="row">
                <div class="col-sm-8 mx-auto">
                    <!-- To configure the contact form email address, go to mail/contact_me.php and update the email address in the PHP file on line 19.-->
                    <form method="POST" enctype="multipart/form-data" action="/api/datotekauploadUredi" >

                            <div class="form-group text-left controls mb-0 pb-2">
                                <label>Verzija</label>
                                <input class="form-control" id="name" name="du_verzija" type="text" value="<%=data[0].du_verzija %>" required="required" data-validation-required-message="Molimo unesite verziju." />
                                <p class="help-block text-danger"></p>
                            </div>
                       
                
                            <div class="form-group text-left  controls mb-0 pb-2">
                                <label>Opis verzije</label>
                                <textarea class="form-control"  class="form-control" value="<%=data[0].du_opis %>" id="opis" name="du_opis" rows="5" required="required" data-validation-required-message="Unesite opis tje sto je izmjenjeno."><%=data[0].du_opis %></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        
                        
                            <!--<div class="form-group text-left  controls mb-0 pb-2">
                                <label>File:</label>
                                <input class="form-control-file" name="file" type="file"  required/>
                                <p class="help-block text-danger"></p>
                            </div>-->
                        

                        <br />
                        <div id="success"></div>
                        <div class="form-group">
                            <input type="text" class="form-control" value="<%=data[0].iddatotekaupload %>" id="iddatotekaupload" name="iddatotekaupload"  hidden>
                            <input type="text" class="form-control" value="<%=data[0].aplikacija_idaplikacija %>" id="aplikacija_idaplikacija" name="idaplikacija"  hidden>
                            <input type="number" class="form-control" value="<%=idkorisnik %>" name="idkorisnik"  hidden>
                            <button class="btn btn-primary btn-xl" type="submit">Spremi </button>
                        </div>
                    </form>

                    <!--ovo baÅ¡ nemere tu, to treba else ako nije stisnuo spremi-->
                    <a href="#" onclick="history.back()"><i class="fas fa-reply fa-2x"></i></a>
                
                    
            
            </div>
        </div>


        </main>
        <%- include('../template/footer')-%>
    </div>
</body>
<script>
    window.onload = function () {
        document.getElementById('form').classList.add('active');
    };
</script>

</html>