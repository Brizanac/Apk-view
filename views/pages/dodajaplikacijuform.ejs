<%- include('../template/head')-%>
<body class="text-center">
    <div class="cover-container w-100 h-100 p-3 mx-auto flex-column">
        <%- include('../template/nav')-%>
        <main role="main" class="inner cover">
            <%- include('../template/messages')-%>
            <h1 class="cover-heading">Upload aplikacije</h1>
            <form method="POST" enctype="multipart/form-data" action="/api/aplikacijaDodaj">
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" class="form-control" value="<%=data[0].ap_naziv %>" id="name" name="ap_naziv" placeholder="Unesite naziv aplikacije" required>
                </div>
                <div class="form-group">
                    <label for="Surname">opis</label>
                    <input type="text" class="form-control" value="<%=data[0].ap_opis %>" id="surname" name="ap_opis" placeholder="Opis" required>
                </div>

                <!--<div class="form-group">
                    <label for="file">file</label>
                    <input type="file" class="form-control" name="files">
                </div>-->
                
                   
                <input type="text" class="form-control" value="<%=data[0].idaplikacija %>" id="idaplikacija" name="idaplikacija"  hidden>
                
               

                <button type="submit" class="btn btn-dark">Submit</button>
            </form>
        </main>
        <%- include('../template/footer')-%>
    </div>
</body>
<script>
    window.onload = function () {
        document.getElementById('form').classList.add('active');
    };
</script>

</html>